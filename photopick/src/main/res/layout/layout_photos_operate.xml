<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photo_selected_buttom_layout_height"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical"
    android:background="@color/translucent_gray_dr" >

    <TextView
        android:id="@+id/tv_photo_bucket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/selector_btn_title"
        android:ellipsize="end"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_photo_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_title"
        android:ellipsize="end"
        android:layout_gravity="end"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" /> 

</FrameLayout>